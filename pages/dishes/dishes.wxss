/* pages/dishes/dishes.wxss */
page {
  background-color: #f4f4f4;
}

swiper {
  flex: 1;
}
swiper-item {
  display: flex;
  flex-direction: column;
}
.card {
  flex: 1;
  margin: 30rpx;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 3px 3px 3px #bbb;
  background-color: #fff;
}
.card .card-img {
  width: 100%;
  height: 480rpx;
  background-color: #f7f7f7;
}
.card .card-text {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  font-size:34rpx;
}
.card .card-text .place-text {
  height: 3em;
  background-color: #f7f7f7;
}
.card .source {
  text-align: end;
  min-height: 1em;
  display: flex;
  justify-content: flex-end;
}
.card .source .place-source{
  width: 7em;
  height: 1em;
  background-color: #f7f7f7;
  margin-top: 2em;
}

.action {
  padding: 30rpx 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size:32rpx;
}

