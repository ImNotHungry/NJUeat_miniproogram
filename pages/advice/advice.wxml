<!--pages/advice/advice.wxml-->
<cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">意见反馈</view>
</cu-custom>

<view class="cu-form-group margin-top">
  <textarea maxlength="-1" disabled="{{modalName!=null}}" value="{{textareaAValue}}" placeholder="请输入您的反馈意见"></textarea>
</view>
<view class="padding flex flex-direction">
  <button class="cu-btn bg-green lg" bindtap="addAdvice">发送</button>
</view>